---
interface Props {
    id: string;
	name: string;
    image: string;
    species: string;
    gender: string;
    url: string;
}

const { id, name, image, species, gender, url } = Astro.props;

---

<a href={`/character/${id}`} class="bg-white rounded-lg shadow-lg p-4 transition-transform transform hover:scale-105">
    <img src={image} alt={name} class="w-full h-40 object-cover" />

    <div class="p-4">
        <h2 class="text-xl font-semibold">{name}</h2>
        <p class="text-gray-600 mt-2">{species}</p>
        <p class="text-gray-600">{gender}</p>
    </div>
</a>